{
	"name": "WorldMuncher",
	"version": "0.7.6",
	"description": "A cross-platform World Building program.",
	"repository": "https://github.com/digiwombat/world-muncher.git",
	"main": "index.js",
	"scripts": {
		"start": "electron index.js",
		"pack": "build --dir",
		"dist": "build",
		"rebuild": "electron-rebuild -f -w yourmodule"
	},
	"keywords": [
		"writing",
		"tools"
	],
	"author": "Randall Fitzgerald <randall@dasaku.net> (https://randallfitzgerald.net)",
	"license": "MIT",
	"dependencies": {
		"diacritics": "^1.2.3",
		"electron-editor-context-menu": "^1.1.1",
		"electron-spell-check-provider": "^1.1.0",
		"electron-window-state": "^3.1.0",
		"fs-extra": "^1.0.0",
		"jquery": "^3.1.1",
		"jquery-textcomplete": "^1.7.3",
		"jszip": "^3.1.3",
		"lodash": "^4.17.13",
		"semver": "^5.3.0",
		"smartcrop": "^1.1.1",
		"spellchecker": "^3.3.1",
		"trumbowyg": "^2.3.0"
	},
	"devDependencies": {
		"electron": "^1.4.1",
		"electron-builder": "^5.2.1",
		"electron-rebuild": "^1.5.5"
	},
	"build": {
		"asar": false,
		"compression": "maximum",
		"appId": "org.digiwombat.worldmuncher",
		"category": "public.app-category.productivity",
		"fileAssociations": [
			{
				"ext": "wmnch",
				"name": "WorldMuncher File"
			}
		],
		"dmg": {
			"contents": [
				{
					"x": 110,
					"y": 150
				},
				{
					"x": 240,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": [
				"rpm",
				"deb"
			]
		},
		"mac": {
			"category": "public.app-category.productivity"
		}
	}
}
